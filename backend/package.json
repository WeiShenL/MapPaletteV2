{
  "name": "mappalette-backend",
  "version": "1.0.0",
  "description": "MapPalette backend monorepo with npm workspaces",
  "private": true,
  "workspaces": [
    "shared",
    "services/atomic/user-service",
    "services/atomic/post-service",
    "services/atomic/interaction-service",
    "services/atomic/follow-service",
    "services/composite/feed-service",
    "services/composite/profile-service",
    "services/composite/social-interaction-service",
    "services/composite/explore-routes-service",
    "services/composite/leaderboard-service",
    "services/composite/user-discovery-service"
  ],
  "scripts": {
    "dev": "npm run start --workspaces",
    "dev:setup": "npm ci && npm run db:deploy",
    "build": "npm run lint",
    "start": "node index.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,css,scss,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,css,scss,yml,yaml}\"",
    "type-check": "tsc --noEmit",
    "db": "prisma --schema=./shared/prisma/schema.prisma",
    "db:migrate": "prisma migrate deploy --schema=./shared/prisma/schema.prisma",
    "db:deploy": "npm run db:migrate",
    "test": "jest",
    "db:down": "docker compose down -v"
  },
  "dependencies": {
    "@bull-board/api": "^5.11.3",
    "@bull-board/express": "^5.11.3",
    "@prisma/adapter-pg": "^7.0.1",
    "@prisma/client": "7.0.1",
    "@supabase/supabase-js": "^2.39.0",
    "axios": "^1.6.2",
    "bull": "^4.13.6",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-prom-bundle": "^7.0.0",
    "express-rate-limit": "^7.1.5",
    "ioredis": "^5.3.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "prisma": "7.0.1",
    "prom-client": "^15.1.0",
    "rate-limit-redis": "^4.2.3",
    "redis": "^4.6.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.32.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  }
}
